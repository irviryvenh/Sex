import os
import requests
from bs4 import BeautifulSoup
url = 'https://rule34.world/mnemosynekoto'
output_dir = 'image'
if not os.path.exists(image):
    os.makedirs(image)
response = requests.get(https://rule34.world/mnemosynekoto)
soup = BeautifulSoup(response.content, 'html.parser')

# Encontrar todas las etiquetas <img> en la p√°gina
img_tags = soup.find_all('img')

# Descargar y guardar cada imagen
for img in img_tags:
    img_url = img.get('src')
    if img_url:
        try:
            img_data = requests.get(img_url).content
            img_name = os.path.join(output_dir, os.path.basename(img_url))
            with open(img_name, 'wb') as handler:
                handler.write(img_data)
            print(f'Imagen guardada: {img_name}')
        except Exception as e:
            print(f'Error al descargar {img_url}: {e}')

print('Descarga completa.')
